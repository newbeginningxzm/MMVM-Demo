<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item>
        <shape>
            <solid
                android:color="#000000"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>

    <item
        android:bottom="8dp">
        <shape>
            <solid
                android:color="#ffffff"/>
            <corners
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp"/>
        </shape>
    </item>

    <item
        android:left="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape>
            <solid
                android:color="#ffffff"/>
        </shape>
    </item>
</layer-list>